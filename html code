         <script type="text/javascript">

            function validate() {

                if (document.myForm.First_Name.value == "") {

                    alert("Please provide First Name !");
                    document.myForm.First_Name.focus();
                    return false;
                }

                if (document.myForm.Last_Name.value == "") {

                    alert("Please provide Last Name !");
                    document.myForm.Last_Name.focus();
                    return false;
                }

                if (document.myForm.Roll_no.value == "") {

                    alert("Please provide Roll number !!");
                    document.myForm.Roll_no.focus();
                    return false;
                }

                if (document.myForm.Email.value == "") {

                    alert("Please provide valid Email !!");
                    document.myForm.Email.focus();
                    return false;
                }

                if (document.myForm.Password.value == "") {

                    alert("Please Enter Password !!");
                    document.myForm.Password.focus();
                    return false;
                }

                if (document.myForm.Birth-Date.value == "") {

                    alert("Please provide Birth date");
                    document.myForm.Birth-Date.focus();
                    return false;
                }

                if (document.myForm.Enrollment-Date.value == "") {

                    alert("Please Enrollment date !!");
                    document.myForm.Enrollment-Date.focus();
                    return false;
                }

                return(true);

            }


        </script>



    </head>

